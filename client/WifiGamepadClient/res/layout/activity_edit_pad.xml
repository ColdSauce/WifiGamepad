<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mattkula.wifigamepad.activities.EditPadActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rootGridLayout"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_dark"
        android:useDefaultMargins="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        >

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_save"
            android:text="Save"
            />

        <Button
            android:id="@+id/btn_less_cols"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="-"/>

        <com.mattkula.wifigamepad.views.AllerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cols"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_more_cols"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="+"/>

        <Button
            android:id="@+id/btn_less_rows"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="-"/>

        <com.mattkula.wifigamepad.views.AllerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rows"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_more_rows"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="+"/>

    </LinearLayout>

</LinearLayout>
